<form class="profile-form" action="/profiles/" method="POST">
  <div class="form-group">
    <label for="petName">Pet Name</label>
    <input
      type="text"
      name="petName"
      id="petName"
      class="petName form-control"
      value="<%= profile.petName %>"
      required
    />

    <label for="animalType">Animal Type</label>
    <input
      type="text"
      name="animalType"
      id="animalType"
      class="animalType form-control"
      value="<%= profile.petDetails.animalType %>"
      required
    />

    <label for="breed">Breed</label>
    <input
      type="text"
      name="breed"
      id="breed"
      class="breed form-control"
      value="<%= profile.petDetails.breed %>"
    />

    <label for="dob">Date of Birth</label>
    <input
      type="date"
      name="dob"
      id="dob"
      class="dob form-control"
      value="<%= profile.petDetails.dob.toISOString().split('T')[0] %>" 
      required
    />

    <label for="bio">Bio</label>
    <textarea
      name="bio"
      id="bio"
      cols="30"
      rows="5"
      class="rounded"
    ><%= profile.petDetails.bio %></textarea>

    <label for="favoriteToys">Favorite Toys</label>
    <input
      type="text"
      name="favoriteToys"
      id="favoriteToys"
      class="favoriteToys form-control"
      value="<%= profile.petDetails.favoriteToys.join(', ') %>"
    />

    <label for="banner">Banner</label>
    <input
      type="text"
      name="banner"
      id="banner"
      class="banner form-control"
      value="<%= profile.petPhoto.banner %>"
    />

    <label for="owners">Owners</label>
    <input
      type="text"
      name="owners"
      id="owners"
      class="owners form-control"
      value="<%= profile.owners %>"
    />

    <label for="profilePhoto">Profile Photo</label>
    <input
      class="form-control"
      type="text"
      name="profilePhoto"
      id="profilePhoto"
      value="<%= profile.petPhoto.profilePhoto %>"
    />

    <button class="btn-primary btn" type="submit">Submit</button>
  </div>
</form>

